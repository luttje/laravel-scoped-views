{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix && npm run clear-views",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production && npm run clear-views",
        "clear-views": "php artisan view:clear"
    },
    "devDependencies": {
        "axios": "^0.25",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14"
    }
}
